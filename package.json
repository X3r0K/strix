name: strix-platform
version: 0.1.0
description: Strix Platform - AI-powered security testing platform with Next.js 14 dashboard
private: true
workspaces:
  - platform/web

scripts:
  dev: "pnpm -r run dev"
  build: "pnpm -r run build"
  test: "pnpm -r run test"
  lint: "pnpm -r run lint"
  clean: "pnpm -r run clean"
  type-check: "pnpm -r run type-check"

devDependencies:
  prettier: "^3.2.0"
  eslint: "^8.57.0"

engines:
  node: ">=18.0.0"
  pnpm: ">=8.0.0"